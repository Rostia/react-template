{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "airbnb", 
        "airbnb/hooks",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "import/no-unresolved": "off",
        "jsx-a11y/label-has-associated-control": "off"
    }
}
